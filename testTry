package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.Servo;

@TeleOp(name = "DrivingControl (Blocks to Java)", group = "")
public class DrivingControl extends LinearOpMode {

  private Servo clampServo;
  private DcMotor FrontRight;
  private DcMotor FrontLeft;
  private DcMotor BackRight;
  private DcMotor BackLeft;

  /**
   * This function is executed when this Op Mode is selected from the Driver Station.
   */
  @Override
  public void runOpMode() {
    double TargetPower;

    clampServo = hardwareMap.servo.get("clampServo");
    FrontRight = hardwareMap.dcMotor.get("FrontRight");
    FrontLeft = hardwareMap.dcMotor.get("FrontLeft");
    BackRight = hardwareMap.dcMotor.get("BackRight");
    BackLeft = hardwareMap.dcMotor.get("BackLeft");

    // Put initialization blocks here.
    clampServo.setPosition(0.5);
    waitForStart();
    if (opModeIsActive()) {
      // Put run blocks here.
      while (opModeIsActive()) {
        // forward and backward
        TargetPower = gamepad1.left_stick_y;
        FrontRight.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_y;
        FrontLeft.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_y;
        BackRight.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_y;
        BackLeft.setPower(TargetPower);
        telemetry.update();
        // left and right
        TargetPower = -gamepad1.left_stick_x;
        FrontRight.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_x;
        FrontLeft.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_x;
        BackRight.setPower(TargetPower);
        TargetPower = -gamepad1.left_stick_x;
        BackLeft.setPower(TargetPower);
        telemetry.update();
        // turning
        TargetPower = -gamepad1.right_stick_x;
        FrontRight.setPower(TargetPower);
        TargetPower = -gamepad1.right_stick_x;
        FrontLeft.setPower(TargetPower);
        TargetPower = gamepad1.right_stick_x;
        BackRight.setPower(TargetPower);
        TargetPower = gamepad1.right_stick_x;
        BackLeft.setPower(TargetPower);
        // servor
        if (gamepad1.a) {
          clampServo.setPosition(0);
        } else if (gamepad1.b) {
          clampServo.setPosition(0.5);
        } else if (gamepad1.y) {
          clampServo.setPosition(1);
        }
      }
    }
  }
}
